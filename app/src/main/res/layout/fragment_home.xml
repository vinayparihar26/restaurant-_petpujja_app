                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/shimmer_bg" />

                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/shimmer_bg" />

                            <View
