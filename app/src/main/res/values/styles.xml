<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Theme for BottomSheetDialogFragment -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <!-- Custom BottomSheet Style with Translucent Background -->
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CircularShapeAppearance" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This makes the image round -->
    </style>



</resources>